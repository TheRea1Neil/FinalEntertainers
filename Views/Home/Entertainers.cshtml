@model List<Entertainer>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1> Are you not entertained!!!</h1>

<h2>Entertainer List</h2>

<table class="table">
    <thead>
        <tr>
           
            <th>Stage Name</th>
            <th>Phone Number</th>
            <th>Web Page</th>
            <th>Email</th>
            <th>Details</th>
        
        </tr>
    </thead>
    <tbody>
        @foreach (var entertainer in Model)
        {
            <tr>
             
                <td>@entertainer.EntStageName</td>
           
                <td>@entertainer.EntPhoneNumber</td>
                <td>
                    @if (!string.IsNullOrEmpty(entertainer.EntWebPage))
                    {
                        <a href="@entertainer.EntWebPage" target="_blank">Visit</a>
                    }
                </td>
                <td>@entertainer.EntEmailAddress</td>
                <td>
                    <a href="@Url.Action("Details", "Home", new { id = entertainer.EntertainerId })" class="btn btn-info">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Home" asp-action="AddEntertainer" class="btn btn-primary">Add New Entertainer</a>
