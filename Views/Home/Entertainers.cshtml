@model List<Entertainer>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Entertainer Catalog";
}

<div class="catcontainer mt-5">
    <h1 class="display-4 text-center">Are you not entertained?!</h1>
    <h2 class="text-center mb-4">Entertainer List</h2>

    <div class="text-right mb-3">
        <a asp-controller="Home" asp-action="AddEntertainer" class="btn btn-primary">Add New Entertainer</a>
    </div>

    <table class="table table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Stage Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var entertainer in Model)
            {
                <tr>
                    <td>@entertainer.EntStageName</td>
                    <td>@entertainer.EntPhoneNumber</td>
                    <td>@entertainer.EntEmailAddress</td>
                    <td>
                        <a href="@Url.Action("Details", "Home", new { id = entertainer.EntertainerId })" class="btn btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
