@{
}
@model Entertainer

<div class="container mt-4">
    <h1>Edit Entertainer Details</h1>

    <form asp-controller="Home" asp-action="Details" method="post" class="mt-3">
        <input type="hidden" asp-for="EntertainerId" />

        <div class="form-group">
            <label asp-for="EntStageName">Stage Name:</label>
            <input asp-for="EntStageName" class="form-control" required />
        </div>

        <div class="form-group">
            <label asp-for="EntSsn">SSN:</label>
            <input asp-for="EntSsn" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EntStreetAddress">Street Address:</label>
            <input asp-for="EntStreetAddress" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EntCity">City:</label>
            <input asp-for="EntCity" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EntState">State:</label>
            <input asp-for="EntState" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EntZipCode">Zip Code:</label>
            <input asp-for="EntZipCode" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EntPhoneNumber">Phone Number:</label>
            <input asp-for="EntPhoneNumber" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EntWebPage">Web Page:</label>
            <input asp-for="EntWebPage" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="EntEmailAddress">Email Address:</label>
            <input asp-for="EntEmailAddress" class="form-control" type="email" />
        </div>

        <div class="form-group">
            <label asp-for="DateEntered">Date Entered:</label>
            <input asp-for="DateEntered" class="form-control" type="date" />
        </div>

        <button type="submit" class="btn btn-success">Update Entertainer</button>
    </form>

    <form asp-action="DeleteEntertainer" asp-controller="Home" method="post" class="mt-3">
        <input type="hidden" name="id" value="@Model.EntertainerId" />
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this?');">Delete</button>
    </form>
</div>
